<h1><%= @car.brand %></h1>

<p>
  Model: <%= @car.model %><br>
  Year: <%= @car.year %><br>
  Fuel type:<%= @car.fuel %><br>
</p>

<h3>Leave  Review:</h3>
<%= simple_form_for [@car, @review] do |f| %>
    <%= f.input :comment, label: "Your Review" %>
    <%= f.input :rating, collection: 0..5 %>
    <%= f.submit "Create Review" %>
<% end %>
<hr>

<h3>Reviews</h3>
  <% @car.reviews.each do |review| %>
   <p><%= review.comment %> | <%= review.rating %></p>
  <% end %>
<br>
